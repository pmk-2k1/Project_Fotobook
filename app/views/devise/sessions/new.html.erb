<%= render "head/header"%>
  <!------------------START MAIN----------------------->
<div class="row justify-content-center">
  <div class=" main col-auto px-0">
    <p class="title"><%= t('.fotobook_login')%></p>
    <div class="frame-icon mt-4">
      <i class="fab fa-google"></i>
      <i class="fab fa-facebook"></i>
      <i class="fab fa-twitter-square"></i>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-login mt-3">
        <%=image_tag("profile_image.jpg", class: "ava_profile")%>
        <div class=" singin mt-5">
          <%= f.email_field :email, autocomplete: "email", id:"email", placeholder: "Email" %>
        </div>
        <div class="singin">
          <%= f.password_field :password, autocomplete: "current-password", id: "password", placeholder: "Password" %>
        </div>
        <div class=" button-l mt-3">
          <%= f.submit "Log in", id: "button-login", data: {turbo: false} %>
        </div>
    <%= render "devise/shared/links" %>
  </div>
      </div>
    <% end %>
</div>
<!------------------END MAIN------------------------->
