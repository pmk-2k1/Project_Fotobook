
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p class="info_pass">Password</p>
  <div class="edit_password">
    <%= f.label :current_password, class: "user_passwsord" %>
    <%= f.password_field :current_password, autocomplete: "current-password", id:"edit_profile", placeholder: "Password" %>
  </div>

  <div class="edit_new_password">
    <%= f.label :new_password, class: "user_passwsord" %>
    <%= f.password_field :password, autocomplete: "new-password", id:"edit_profile", placeholder: "New Password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="edit_conf_password">
    <%= f.label :password_confirmation, class: "user_passwsord" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"edit_profile", placeholder: "Confirm New Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" ,class: "save_info_pass" %>
  </div>
<% end %>
